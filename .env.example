# Wallet Configuration
# 从 configs/wallets.yaml 获取 governor 的 private key
WALLET_PRIVATE_KEY=

# RPC URLs
L1_RPC=http://127.0.0.1:8545
L2_RPC=http://127.0.0.1:3150

# Token Configuration (部署后自动填充)
TOKEN_ADDRESS=

# Chain Configuration (可选，用于覆盖默认值)
CHAIN_NAME=custom_zkchain
CHAIN_ID=272
TOKEN_NAME="ZK Base Token"
TOKEN_SYMBOL=ZKBT
L2_RPC_PORT=3150

# Bridge Configuration (可选，用于 depositBaseToken.ts)
DEPOSIT_AMOUNT=20              # L1 -> L2 存款金额
WITHDRAW_AMOUNT=10             # L2 -> L1 提现金额
DEPOSIT_WAIT_SECONDS=60        # 存款后等待 L2 同步的时间
WITHDRAW_FINALIZE_WAIT=120     # 等待提现可以 finalize 的时间
