{
  "name": "zksync-erc20-base-token",
  "version": "1.0.0",
  "description": "ZKsync ERC20 Base Token Setup",
  "scripts": {
    "build": "npx hardhat compile",
    "deploy:gas-token": "ts-node scripts/deployGasToken.ts",
    "bridge:gas-token": "ts-node scripts/bridgeGasToken.ts",
    "bridge:eth": "hardhat run scripts/bridgeETH.ts",
    "bridge:erc20": "hardhat run scripts/bridgeERC20.ts",
    "ignore-configs": "git update-index --assume-unchanged configs/apps/explorer.config.json configs/apps/portal.config.json",
    "track-configs": "git update-index --no-assume-unchanged configs/apps/explorer.config.json configs/apps/portal.config.json",
    "init": "./scripts/init.sh",
    "start": "./scripts/l1.sh start",
    "stop": "./scripts/l1.sh stop",
    "restart": "./scripts/l1.sh restart",
    "reset": "./scripts/l1.sh reset"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.22.0",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0",
    "typescript": "^5.0.0",
    "zksync-ethers": "^6.0.0"
  }
}
